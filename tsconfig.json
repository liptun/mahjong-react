{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "types": ["jest"],
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es2015"]
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.story.ts"
    ]
}
